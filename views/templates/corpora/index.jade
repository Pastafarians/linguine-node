.input-group.input-group-lg.corpora-search
  .input-group-btn
    a(ng-href="/corpora/new").new-corpus.btn.btn-default
      | Create Corpus
  input.form-control(placeholder="Search by title, filename, and tags...")
  .input-group-btn
    button.btn.btn-default(type='submit')
      i.glyphicon.glyphicon-search
div(ng-repeat="corpus in corpora")
  .col-xs-12.col-sm-6.col-md-4.col-lg-3
    .card
      h3.no-margin {{ corpus.title }}
      h4 {{ corpus.fileName }}